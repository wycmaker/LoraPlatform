@model LoraPlatform.ViewModel.SignupViewModel

@{
    ViewBag.Title = "會員註冊";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>

    p {
        margin:0;
    }

    .SignupDiv {
        background-color:rgba(255, 255, 255, 0.5);
        padding:10px 0 10px 15px;
        margin:10vh auto 0 auto;
        height:auto;
        z-index:1;
    }
    .SignupForm {
        margin:0 auto;
        width:100%;
    }
    .form-group {
        margin:0;
    }

    
    .NavbarMenu {
        z-index:2;
    }
</style>

<div class="SignupDiv col-lg-6 col-sm-10">
    <h2>SignUp</h2>
    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post,   new {@class = "SignupForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NewMember.Account, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-12">
                    @Html.TextBoxFor(model => model.NewMember.Account, htmlAttributes: new { @class = "form-control" })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.NewMember.Account, "", htmlAttributes:new { @class = "text-danger" })</p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.Password, "", htmlAttributes: new { @class = "text-danger" })</p>
</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ComfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.PasswordFor(model => model.ComfirmPassword, htmlAttributes: new { @class = "form-control" })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.ComfirmPassword, "", htmlAttributes: new { @class = "text-danger" })</p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NewMember.Name, htmlAttributes: new { @class = "contorl-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.NewMember.Name, htmlAttributes: new { @class = "form-control" })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.NewMember.Name, "", htmlAttributes: new { @class = "text-danger" })</p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NewMember.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.NewMember.Email, htmlAttributes: new { @class = "form-control" })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.NewMember.Email, "", htmlAttributes: new { @class = "text-danger" })</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="註冊" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
