<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <style>
        body {
            height: auto;
            width: 100%;
            background-color: rgba(229,246,255, 1);
            margin: 0px;
            padding: 0px;
        }

        nav {
            background-color: rgba(5,68,109, 1);
        }

        .RightDiv {
            height: calc(100% - 48px);
            width: 300px;
            position: fixed;
            top: 48px;
            left: 0;
            background-color: rgba(154,205,255,1);
            overflow-x: hidden;
            overflow-y: scroll;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .form-group {
            margin: 0;
        }

        .NavbarMenu {
            z-index: 2;
        }

        .RightDiv::-webkit-scrollbar {
            width: 0 !important
        }

        .RightDivA {
            padding: 6px 8px 6px 66px;
            text-decoration: none;
            font-size: 25px;
            color: #ffffff;
            display: block;
            margin: 3px 3px;
            background-color: rgba(0,153,229,1);
            border-radius: 5px;
        }

        .DeviceA {
            padding: 6px 8px 6px 8px;
            text-decoration: none;
            font-size: 15px;
            color: #ffffff;
            margin: 0 3px 0 30px;
            background-color: rgba(0,153,229,1);
            border-radius: 5px;
        }


        .main {
            font-size: 28px;
            padding: 0 10px;
            margin: 48px 3px 0 305px;
            height: calc(100vh - 52px);
            background-color: rgba(154,205,255,1);
        }



        .Content {
            height: calc(100vh - 232px);
            overflow-y: scroll;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

            .Content::-webkit-scrollbar {
                width: 0 !important
            }

        .media {
            background-color: rgba(229,246,255, 1);
            border: 0;
            margin: 3px auto;
            color: #000000;
        }

        .list-group-item {
            background-color: rgba(229,246,255, 0);
            padding-left: 50px;
            font-size: 30px;
            color: rgba(3, 15, 252, 1);
        }

            .list-group-item a {
                text-decoration: none;
            }

        .list-group {
            margin-top: 150px;
        }

        .HiddenDiv {
            visibility: hidden;
        }

        .HiddenMenu {
            position: absolute;
            top: 43px;
            left: 0px;
            background-color: rgba(240, 240, 242,1);
            width: 0px;
            height: calc(100% - 43px);
            overflow: hidden;
            z-index: 1;
        }

        .MenuButton {
            background-color: rgba(60, 60, 60, 0);
            border: none;
            font-size: 30px;
            color: #000000;
            margin: 0;
            padding: 0;
        }

        .CloseMenu {
            margin: 10px;
            font-size: 30px;
        }

            .CloseMenu:focus {
                outline: 0;
            }

        .MenuButton:focus {
            outline: 0;
        }

        .rwd-table {
            background: #fff;
            overflow: hidden;
        }

            .rwd-table tr:nth-of-type(2n) {
                background: #eee;
            }

            .rwd-table th, .rwd-table td {
                margin: 0.5em 1em;
            }

        .rwd-table {
            min-width: 100%;
        }

            .rwd-table th {
                display: none;
            }

            .rwd-table td {
                display: block;
            }

                .rwd-table td:before {
                    content: attr(data-th) " : ";
                    font-weight: bold;
                    width: 6.5em;
                    display: inline-block;
                }

            .rwd-table th, .rwd-table td {
                text-align: left;
            }

                .rwd-table th, .rwd-table td:before {
                    color: #D20B2A;
                    font-weight: bold;
                }

        @@media (min-width: 480px) {
            .rwd-table td:before {
                display: none;
            }

            .rwd-table th, .rwd-table td {
                display: table-cell;
                padding: 0.25em 0.5em;
            }

                .rwd-table th:first-child, .rwd-table td:first-child {
                    padding-left: 0;
                }

                .rwd-table th:last-child, .rwd-table td:last-child {
                    padding-right: 0;
                }

            .rwd-table th, .rwd-table td {
                padding: 1em !important;
            }
        }

        .rwd-font {
            font-size: 3vmin;
        }

        .rwd-font a {
            text-decoration:none;
        }



        @@media only screen and (max-width:1024px) {
            .RightDiv {
                width: 0px;
            }

            .main {
                margin-left: 3px;
            }

            .HiddenDiv {
                visibility: visible;
            }
            
        }
    </style>
</head>
<body>
    <script>
        function ShowNavbarMenu() {
            var show = document.querySelector(".NavbarMenu").style
            console.log(document.querySelector(".NavbarMenu").style.width)
            if (show.width == "" || show.width == "0px") {
                show.animation = "OpenNavbarMenu 1s ease infinite"
                show.animationIterationCount = "1"
                show.width = "300px"
            } else {
                show.animation = "CloseNavbarMenu 1s ease infinite"
                show.animationIterationCount = "1"
                show.width = "0px"
            }
        }

        function CloseNavbarMenu() {
            var show = document.querySelector(".NavbarMenu").style
            show.animation = "CloseNavbarMenu 1s ease infinite"
            show.animationIterationCount = "1"
            show.width = "0px"
        }

        function ShowHiddenMenu() {
            var show = document.querySelector(".HiddenMenu").style
            if (show.width == "" || show.width == "0px") {
                show.animation = "OpenNavbarMenu 1s ease infinite"
                show.animationIterationCount = "1"
                show.width = "300px"
            }
        }

        function CloseHiddenMenu() {
            var show = document.querySelector(".HiddenMenu").style
            show.animation = "CloseNavbarMenu 1s ease infinite"
            show.animationIterationCount = "1"
            show.width = "0px"
        }

    </script>
    <nav class="navbar navbar-expand-md">
        <a class="navbar-brand" href='@Url.Action("Index", "Home")' style="padding-left:5px">
            <img src='@Url.Content("~/Images/logo.png")' alt="logo" style="width:30px">
            I-search
        </a>
        <ul class="navbar-nav">
            <li class="nav-item NavbarHidden">
                <a class="nav-link text-white " href='@Url.Action("Index", "Home")#SecondContent'>產品介紹</a>
            </li>
            <li class="nav-item NavbarHidden">
                <a class="nav-link text-white" href='@Url.Action("Index", "Home")#FifthContent'>Demo影片</a>
            </li>
            <li class="nav-item NavbarHidden">
                <a class="nav-link text-white" href='@Url.Action("Index", "Home")#SixthContent'>硬體設備</a>
            </li>
            <li class="nav-item NavbarHidden">
                <a class="nav-link text-white" href='@Url.Action("Index", "Platform")'>軟體平台</a>
            </li>
            <li class="nav-item NavbarHidden">
                <a class="nav-link text-white" href='@Url.Action("Index", "Home")#SeventhContent'>關於我們</a>
            </li>
        </ul>
        <ul class="nav navbar-nav ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item NavbarHidden">
                    <a class="nav-link text-white" href='@Url.Action("MemberCenter", "Platform")'><i class="far fa-address-card"></i> 會員中心</a>
                </li>
                <li class="nav-item NavbarHidden">
                    <a class="nav-link text-white" href='@Url.Action("LogOut", "Home")'><i class="fas fa-sign-out-alt"></i>登出</a>
                </li>
            }
            else
            {
                <li class="nav-item NavbarHidden">
                    <a class="nav-link text-white" href='@Url.Action("SignIn", "Home")'><i class="fas fa-sign-in-alt"></i>登入</a>
                </li>
                <li class="nav-item NavbarHidden">
                    <a class="nav-link text-white" href='@Url.Action("SignUp", "Home")'><i class="fas fa-user-plus"></i> 註冊</a>
                </li>
            }

            <li class="nav-item">
                <button type="button" class="nav-link NavbarButton" onclick="ShowNavbarMenu()" onblur="CloseNavbarMenu()">
                    <i class="fa fa-bars"></i>
                </button>
            </li>
        </ul>
    </nav>
    <div class="NavbarMenu">
        <a class="text-white" href='@Url.Action("Index", "Home")#SecondContent'>產品介紹</a>
        <hr>
        <a class="text-white" href='@Url.Action("Index", "Home")#FifthContent'>Demo影片</a>
        <hr>
        <a class="text-white" href='@Url.Action("Index", "Home")#SixthContent'>硬體設備</a>
        <hr />
        <a class="text-white" href='@Url.Action("Index", "Platform")'>軟體平台</a>
        <hr>
        <a class="text-white" href='@Url.Action("Index", "Home")#SeventhContent'>關於我們</a>
        <hr>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="text-white" href='@Url.Action("MemberCenter", "Platform")'><i class="far fa-address-card"></i> 會員中心</a>
            <hr>
            <a class="text-white" href='@Url.Action("LogOut", "Home")'><i class="fas fa-sign-out-alt"></i>登出</a>
        }
        else
        {
            <ul class="list-group list-group-horizontal">
                <li><a class="text-white" href='@Url.Action("SignIn", "Home")'><i class="fas fa-sign-in-alt"></i> 登入</a></li>
                <li><a class="text-white" href='@Url.Action("SignUp", "Home")'><i class="fas fa-user-plus"></i> 註冊</a></li>
            </ul>
        }

        <hr>
    </div>
    <div>
        <div class="RightDiv">
            <ul class="list-group list-group-flush listcolor">
                <li class="list-group-item"><a href='@Url.Action("AdminMemberCenter", "Platform")'>人員管理</a></li>
                <li class="list-group-item"><a href='@Url.Action("DeviceManage", "Platform")'>裝置管理</a></li>
                <li class="list-group-item"><a href='@Url.Action("ConnectTable", "Platform")'>連線管理</a></li>
                <li class="list-group-item"><a href='@Url.Action("ChangePassword", "Home")'>修改密碼</a></li>
            </ul>
        </div>

        <div class="main">
            @RenderBody()
        </div>

        <div class="HiddenMenu">
            <button type="button" class="close CloseMenu"><i class="fas fa-times"></i></button>
            <ul class="list-group list-group-flush listcolor">
                <li class="list-group-item"><a href='@Url.Action("AdminMemberCenter", "Platform")'>人員管理</a></li>
                <li class="list-group-item"><a href='@Url.Action("DeviceManage", "Platform")'>裝置管理</a></li>
                <li class="list-group-item"><a href='@Url.Action("ConnectTable", "Platform")'>連線管理</a></li>
                <li class="list-group-item"><a href='@Url.Action("ChangePassword", "Home")'>更改密碼</a></li>
            </ul>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
