@model LoraPlatform.ViewModel.EditMemberViewModel

@{
    ViewBag.Title = "EditMember";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>

    p {
        margin: 0;
    }

    .SignupDiv {
        background-color: rgba(255, 255, 255, 0.5);
        padding: 10px 0 10px 15px;
        margin: 10vh auto 0 auto;
        height: auto;
        z-index: 1;
    }

    .SignupForm {
        margin: 0 auto;
        width: 100%;
    }

    .form-group {
        margin: 0;
    }


    .NavbarMenu {
        z-index: 2;
    }
</style>

<div class="SignupDiv col-lg-6 col-sm-10">
    <h2>修改會員資料</h2>
    @using (Html.BeginForm("EditMember", "Platform", FormMethod.Post, new { @class = "SignupForm" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h6>@Html.LabelFor(model => model.account, htmlAttributes: new { @class = "control-label" })</h6>
        <div class="col-12">
            @Html.TextBoxFor(model => model.account, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            <h6>&nbsp;@Html.ValidationMessageFor(model => model.account, "", htmlAttributes: new { @class = "text-danger" })</h6>
        </div>
    </div>
    <div class="form-group">
        <h6>@Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label" })</h6>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.name, htmlAttributes: new { @class = "form-control" })
            <h6>&nbsp;@Html.ValidationMessageFor(model => model.name, "", htmlAttributes: new { @class = "text-danger" })</h6>
        </div>
    </div>
    <div class="form-group">
        <h6>@Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })</h6>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control" })
            <h6>&nbsp;@Html.ValidationMessageFor(model => model.email, "", htmlAttributes: new { @class = "text-danger" })</h6>
        </div>
    </div>
    <div class="form-group">
        <h6>@Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "contorl-label " })</h6>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.phone, htmlAttributes: new { @class = "form-control" })
            <h6>&nbsp;@Html.ValidationMessageFor(model => model.phone, "", htmlAttributes: new { @class = "text-danger" })</h6>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="修改" class="btn btn-primary" />
        </div>
    </div>
</div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

